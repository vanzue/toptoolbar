{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch TopToolbar (x64 Debug)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-debug-x64",
            "program": "${workspaceFolder}/bin/Debug/${config:dotnet.targetFramework}/win-x64/TopToolbar.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "requireExactSource": false,
            "env": {
                "DOTNET_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Attach to TopToolbar Process",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}",
            "requireExactSource": false
        },
        {
            "name": "Launch TopToolbar (ARM64 Debug)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-debug-arm64",
            "program": "${workspaceFolder}/bin/Debug/${config:dotnet.targetFramework}/win-arm64/TopToolbar.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "requireExactSource": false,
            "env": {
                "DOTNET_ENVIRONMENT": "Development"
            }
        }
    ]
}
