<winuiex:WindowEx
    x:Class="TopToolbar.ToolbarWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:local="using:TopToolbar"
    xmlns:winuiex="using:WinUIEx"
    xmlns:ttcontrols="using:TopToolbar.Controls"
    xmlns:viewModels="using:TopToolbar.ViewModels">
    <Grid
        x:Name="RootGrid"
        KeyDown="OnRootKeyDown"
        IsTabStop="True"
        Background="Transparent"
        Padding="{x:Bind local:ToolbarMetrics.ToolbarShadowPadding}"
        UseLayoutRounding="True">
        <Grid.Resources>
            <SolidColorBrush x:Key="ToolbarBackgroundBrush" Color="#78FFFFFF" />
            <SolidColorBrush x:Key="ToolbarLabelBrush" Color="#FF646464" />
            <SolidColorBrush x:Key="ToolbarSeparatorBrush" Color="#32000000" />
            <Style x:Key="ToolbarIconButtonStyle" TargetType="Button">
                <Setter Property="Width" Value="52" />
                <Setter Property="Height" Value="52" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Top" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="UseLayoutRounding" Value="True" />
            </Style>
        </Grid.Resources>
        <Border
            x:Name="ToolbarContainer"
            Loaded="ToolbarContainer_Loaded"
            MinHeight="{x:Bind local:ToolbarMetrics.ToolbarHeight}"
            Padding="{x:Bind local:ToolbarMetrics.ToolbarChromePadding}"
            CornerRadius="{x:Bind local:ToolbarMetrics.ToolbarCornerRadius}"
            Background="{StaticResource ToolbarBackgroundBrush}"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            UseLayoutRounding="True"
            IsHitTestVisible="True">
            <Border.Shadow>
                <ThemeShadow />
            </Border.Shadow>
            <ScrollViewer
                x:Name="ToolbarScrollViewer"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Disabled"
                HorizontalScrollMode="Enabled"
                VerticalScrollMode="Disabled">
                <StackPanel
                    x:Name="MainStack"
                    Orientation="Horizontal"
                    Spacing="{x:Bind local:ToolbarMetrics.ToolbarStackSpacing}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left">
                    <ItemsRepeater ItemsSource="{x:Bind ItemsViewModel.VisibleGroups, Mode=OneWay}">
                        <ItemsRepeater.Layout>
                            <controls:StackLayout Orientation="Horizontal" Spacing="0" />
                        </ItemsRepeater.Layout>
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate x:DataType="viewModels:ToolbarGroupViewModel">
                                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                    <Border
                                        CornerRadius="15"
                                        Background="Transparent"
                                        Padding="4,2,4,2"
                                        Margin="2,0,2,0">
                                        <Border.Shadow>
                                            <ThemeShadow />
                                        </Border.Shadow>
                                        <Border.Translation>0,0,1</Border.Translation>
                                        <ItemsRepeater ItemsSource="{x:Bind Buttons, Mode=OneWay}">
                                            <ItemsRepeater.Layout>
                                                <controls:StackLayout Orientation="Horizontal" Spacing="2" />
                                            </ItemsRepeater.Layout>
                                            <ItemsRepeater.ItemTemplate>
                                                <DataTemplate x:DataType="viewModels:ToolbarButtonItem">
                                                    <StackPanel
                                                        Orientation="Vertical"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Spacing="6"
                                                        Width="{x:Bind local:ToolbarMetrics.ButtonContainerWidth}"
                                                        Margin="2">
                                                        <Button
                                                            Style="{StaticResource ToolbarIconButtonStyle}"
                                                            IsEnabled="{x:Bind Button.IsActionEnabled, Mode=OneWay}"
                                                            Tag="{x:Bind}"
                                                            Click="OnToolbarButtonClick"
                                                            RightTapped="OnToolbarButtonRightTapped"
                                                            ToolTipService.ToolTip="{x:Bind Button.ToolTipText, Mode=OneWay}">
                                                            <Button.Resources>
                                                                <SolidColorBrush x:Key="ButtonBackground" Color="#00000000" />
                                                                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#3C000000" />
                                                                <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#64000000" />
                                                                <SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="#00000000" />
                                                            </Button.Resources>
                                                            <Grid
                                                                Width="{x:Bind local:ToolbarMetrics.ToolbarButtonSize}"
                                                                Height="{x:Bind local:ToolbarMetrics.ToolbarButtonSize}">
                                                                <ttcontrols:ToolbarIconPresenter
                                                                    Button="{x:Bind Button}"
                                                                    IconSize="{x:Bind local:ToolbarMetrics.ToolbarIconFontSize}"
                                                                    Foreground="Black"
                                                                    Opacity="{x:Bind Button.IconOpacity, Mode=OneWay}"
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center" />
                                                                <ProgressRing
                                                                    Width="{x:Bind local:ToolbarMetrics.ProgressRingSize}"
                                                                    Height="{x:Bind local:ToolbarMetrics.ProgressRingSize}"
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"
                                                                    IsActive="{x:Bind Button.IsExecuting, Mode=OneWay}"
                                                                    Visibility="{x:Bind Button.ProgressVisibility, Mode=OneWay}" />
                                                            </Grid>
                                                        </Button>
                                                        <TextBlock
                                                            Text="{x:Bind Button.DisplayName, Mode=OneWay}"
                                                            FontSize="{x:Bind local:ToolbarMetrics.ToolbarLabelFontSize}"
                                                            Foreground="{StaticResource ToolbarLabelBrush}"
                                                            HorizontalAlignment="Center"
                                                            TextAlignment="Center"
                                                            TextWrapping="NoWrap"
                                                            TextTrimming="CharacterEllipsis"
                                                            MaxWidth="{x:Bind local:ToolbarMetrics.ButtonLabelMaxWidth}"
                                                            Margin="0,4,0,0"
                                                            UseLayoutRounding="True" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsRepeater.ItemTemplate>
                                        </ItemsRepeater>
                                    </Border>
                                    <Border
                                        Width="1"
                                        Height="{x:Bind local:ToolbarMetrics.ToolbarSeparatorHeight}"
                                        Background="{StaticResource ToolbarSeparatorBrush}"
                                        VerticalAlignment="Center"
                                        Margin="8,0,8,0"
                                        IsHitTestVisible="False"
                                        CornerRadius="0.5"
                                        Visibility="{x:Bind TrailingSeparatorVisibility, Mode=OneWay}">
                                        <Border.Shadow>
                                            <ThemeShadow />
                                        </Border.Shadow>
                                        <Border.Translation>0,0,2</Border.Translation>
                                    </Border>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>

                    <Border
                        x:Name="SettingsSeparator"
                        Width="1"
                        Height="{x:Bind local:ToolbarMetrics.ToolbarSeparatorHeight}"
                        Background="{StaticResource ToolbarSeparatorBrush}"
                        VerticalAlignment="Center"
                        Margin="8,0,8,0"
                        IsHitTestVisible="False"
                        CornerRadius="0.5"
                        Visibility="{x:Bind ItemsViewModel.SettingsSeparatorVisibility, Mode=OneWay}">
                        <Border.Shadow>
                            <ThemeShadow />
                        </Border.Shadow>
                        <Border.Translation>0,0,2</Border.Translation>
                    </Border>

                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <StackPanel
                            Orientation="Vertical"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="6"
                            Width="{x:Bind local:ToolbarMetrics.ButtonContainerWidth}"
                            Margin="2">
                            <Button
                                Style="{StaticResource ToolbarIconButtonStyle}"
                                Click="OnSnapshotClick"
                                ToolTipService.ToolTip="Snapshot workspace">
                                <Button.Resources>
                                    <SolidColorBrush x:Key="ButtonBackground" Color="#00000000" />
                                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#3C000000" />
                                    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#64000000" />
                                    <SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="#00000000" />
                                </Button.Resources>
                                <FontIcon
                                    Glyph="&#xE114;"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="{x:Bind local:ToolbarMetrics.ToolbarIconFontSize}"
                                    Foreground="Black" />
                            </Button>
                            <TextBlock
                                Text="Snapshot"
                                FontSize="{x:Bind local:ToolbarMetrics.ToolbarLabelFontSize}"
                                Foreground="{StaticResource ToolbarLabelBrush}"
                                HorizontalAlignment="Center"
                                TextAlignment="Center"
                                TextWrapping="NoWrap"
                                TextTrimming="CharacterEllipsis"
                                MaxWidth="{x:Bind local:ToolbarMetrics.ButtonLabelMaxWidth}"
                                Margin="0,4,0,0"
                                UseLayoutRounding="True" />
                        </StackPanel>

                        <StackPanel
                            Orientation="Vertical"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="6"
                            Width="{x:Bind local:ToolbarMetrics.ButtonContainerWidth}"
                            Margin="2">
                            <Button
                                Style="{StaticResource ToolbarIconButtonStyle}"
                                Click="OnSettingsClick"
                                ToolTipService.ToolTip="Toolbar Settings">
                                <Button.Resources>
                                    <SolidColorBrush x:Key="ButtonBackground" Color="#00000000" />
                                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#3C000000" />
                                    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#64000000" />
                                    <SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="#00000000" />
                                </Button.Resources>
                                <FontIcon
                                    Glyph="&#xE713;"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="{x:Bind local:ToolbarMetrics.ToolbarIconFontSize}"
                                    Foreground="Black" />
                            </Button>
                            <TextBlock
                                Text="Settings"
                                FontSize="{x:Bind local:ToolbarMetrics.ToolbarLabelFontSize}"
                                Foreground="{StaticResource ToolbarLabelBrush}"
                                HorizontalAlignment="Center"
                                TextAlignment="Center"
                                TextWrapping="NoWrap"
                                TextTrimming="CharacterEllipsis"
                                MaxWidth="{x:Bind local:ToolbarMetrics.ButtonLabelMaxWidth}"
                                Margin="0,4,0,0"
                                UseLayoutRounding="True" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
        <Canvas x:Name="RadialCanvas"
                Visibility="Collapsed"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                IsHitTestVisible="True"
                MinWidth="280"
                MinHeight="280"/>
        <StackPanel
            x:Name="NotificationHost"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0,8,0,0"
            IsHitTestVisible="False">
            <ItemsRepeater ItemsSource="{x:Bind NotificationService.Items, Mode=OneWay}">
                <ItemsRepeater.Layout>
                    <controls:StackLayout Orientation="Vertical" Spacing="8" />
                </ItemsRepeater.Layout>
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate x:DataType="viewModels:NotificationItem">
                        <Border
                            Background="{StaticResource ToolbarBackgroundBrush}"
                            CornerRadius="12"
                            Padding="10,6"
                            MaxWidth="320"
                            MinWidth="200"
                            HorizontalAlignment="Center"
                            UseLayoutRounding="True">
                            <Border.Shadow>
                                <ThemeShadow />
                            </Border.Shadow>
                            <Grid ColumnDefinitions="4,8,*" VerticalAlignment="Center">
                                <Border
                                    Width="4"
                                    Height="16"
                                    CornerRadius="2"
                                    Background="{ThemeResource SystemFillColorCriticalBrush}"
                                    VerticalAlignment="Center" />
                                <FontIcon
                                    Grid.Column="1"
                                    Glyph="&#xE783;"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="12"
                                    Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                                    VerticalAlignment="Center" />
                                <TextBlock
                                    Grid.Column="2"
                                    Text="{x:Bind Message}"
                                    FontSize="12"
                                    Foreground="{StaticResource ToolbarLabelBrush}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap"
                                    VerticalAlignment="Center" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
        </StackPanel>
    </Grid>
</winuiex:WindowEx>
